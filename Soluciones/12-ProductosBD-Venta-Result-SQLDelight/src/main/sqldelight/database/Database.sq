-- Tabla de Lineas de Ventas
CREATE TABLE IF NOT EXISTS LineaVentaEntity (
     id TEXT PRIMARY KEY,
     venta_id TEXT NOT NULL REFERENCES VentaEntity(id),
     producto_id INTEGER NOT NULL REFERENCES ProductoEntity(id),
     cantidad INTEGER NOT NULL,
